# ========================================
# Backend Environment Variables Template
# ========================================

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-alb-url.amazonaws.com

# Database (RDS PostgreSQL with pgvector)
DATABASE_URL=postgresql://username:password@your-rds-endpoint:5432/echochamber_db

# Redis (ElastiCache)
REDIS_URL=redis://your-elasticache-endpoint:6379/0
CELERY_BROKER_URL=redis://your-elasticache-endpoint:6379/1

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key

# Tavily Search API (for LLM-driven web search)
TAVILY_API_KEY=sk-your-tavily-api-key

# Reddit API (Optional)
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=EchoChamberAnalyst/1.0

# LangSmith (AI Observability)
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_PROJECT=echochamber-analyst-production
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_TRACING_V2=true

# Feature Flags
ENABLE_WEB_SCRAPING=True
ENABLE_REDDIT_SCRAPING=True
ENABLE_DISCORD_SCRAPING=False

# Rate Limiting
DEFAULT_RATE_LIMIT=100/hour
REDDIT_RATE_LIMIT=60/minute
SCRAPING_DELAY=1

# AWS Settings (if needed)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name

# CORS Origins (Frontend URLs)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
